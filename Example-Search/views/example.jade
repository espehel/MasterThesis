extends layout
mixin linkItem(href, title, header, score)
    li
        a(href=href+"?state=2")
            =title + ":"
        =" " + header
        =" - " + score

block content
    .leftColumn.container
        h4 Total matches:
        ul
            each val in example.similarExamples.left
                +linkItem(val._source.id, val._source.title, val._source.header, val.score)
    .mainColumn.container
        !{example._source.html}
    .rightColumn.container
        h4 Partial matches:
        ul
            each val in example.similarExamples.right
                +linkItem(val._source.id, val._source.title, val._source.header, val.score)
    .bottomRow
        ul
            each val in example._source.categories
                li= val



